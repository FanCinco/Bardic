<!-- places section starts  -->

<main class="places" id="places">

    <h1 class="heading">
        <span>e</span>
        <span>x</span>
        <span>p</span>
        <span>e</span>
        <span>n</span>
        <span>s</span>
        <span>e</span>
        <span>s</span>

    </h1>

    <div class="row">

        <form action="" id="create-expense-form">
            <div class="inputbox">
                <h3>trip</h3>
                <select name="trip-select" class="form-control" id="trip-select" placeholder="Which trip was this on?">
                    <option value=""></option>
                    {{#each user.usertrips as |usertrip|}}
                    <option value="{{usertrip.trip.id}}">{{usertrip.trip.title}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="inputBox">
                <h3> description </h3>
                <input class="form-control expense-description" placeholder="restaurant name, etc..." rows="2" id="expense-description" ></input>
            </div>
            <div class="inputBox">
                <h3>cost ($)</h3>
                <input type="text" label="expense-cost" class="form-control expense-cost-input" placeholder="20.00" id="expense-cost" >
            </div>
            <div class="inputBox">
                <h3>date (MM/DD/YYYY)</h3>
                <input type="text" class="form-control expense-day" placeholder="mm/dd/yyyy" id="expense-day" />
            </div>
            <button type="submit" class="btn btn-primary expense-submit">Submit</button>
            <p><br></p>
            <div class="inputBox">
                <h3>Expenses by Date</h3>
            </div>
            <div class="m-2 w-100">
                <div class="inputbox">
                    <h3>trip</h3>
                    <select name="trip-select" class="form-control" id="get-expense-trip-select" placeholder="Which trip was this on?">
                        <option value=""></option>
                        {{#each user.usertrips as |usertrip|}}
                        <option value="{{usertrip.trip.id}}">{{usertrip.trip.title}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group row align-items-center justify-content-around">
                    <div style="width: 60%; margin-left:3px;" class="d-flex">
                        <label class="mr-2">Date:</label>
                        <input type="text" class="form-control day-lookup" placeholder="MM/DD/YYYY"/>
                    </div>
                    <div style="width: 40%;">
                        <button type="click" class="btn btn-primary day-submit">Find Expenses</button>
                    </div>  
                </div>
                <div id='expense-data'>
                    {{!-- add day data here --}}
                </div>
            </div>
            
        </form>
        
        <div class="image">
            <img src="images/chart.png" alt="">
        </div>

    </div>

</main>
