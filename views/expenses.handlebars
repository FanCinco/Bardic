<div class="row">
    <div class="row col-6 border border-primary" style="padding-left: 35px; height: fit-content;">
        <div>
            <select name="trip-select" id="trip-select">
                <option value=""></option>
                {{#each user.usertrips as |usertrip|}}
                <option value="">{{usertrip.trip.title}}</option>
                {{/each}}
            </select>
            <button id="trip-select-btn">Select Trip</button>
        </div>
        <form>
            <div class="d-flex w-100 m-2">
                <textarea class="form-control expense-description" placeholder="Place your expense" rows="2" id="expense-description" ></textarea>
            </div>
            <div class="d-flex w-100 align-items-center justify-content-around border-bottom border-secondary pb-2 ">
                <div style="width: 30%;">
                    <input type="text" label="expense-cost" class="form-control expense-cost-input" placeholder="Cost" id="expense-cost" >
                </div>
                <div style="width: 30%;">
                    <input type="text" class="form-control expense-day" placeholder="mm/dd/yyyy" id="expense-day" />
                </div>
                <div style="width: 30%;">
                    <button type="submit" class="btn btn-primary expense-submit">Submit</button>
                </div>
            </div>
        </form>

        <div class="m-2 w-100">
            <div class="form-group row align-items-center justify-content-around">
                <div style="width: 60%; margin-left:3px;" class="d-flex">
                    <label class="mr-2">Date:</label>
                    <input type="text" class="form-control day-lookup" placeholder="mm/dd/yyyy"/>
                </div>
                <div style="width: 30%;">
                    <button type="submit" class="btn btn-primary day-submit">Submit</button>
                </div>  
            </div>
            <div>
                {{!-- add day data here --}}
            </div>
        </div>
    </div>
    
    <div class="col-6">
        <div class="p-5 bg-light border rounded-3" style="height: 40vh;">
        <h2>Add borders</h2>
        {{!-- <img src"quickcharts img goes here">  --}}
        </div>
    </div>
</div>

